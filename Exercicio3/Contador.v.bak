module Contador
					(input clk, clr_n
					input [5:0] valor,
					output reg cont[5:0],
					input operacao[1:0]
					);
					

always @(posedge clk)
begin
		if(!clr_n)
			cont <= 1'b0;
		else
			begin
					case(operacao)
						2'b00: cont = cont + 6'd1;
						2'b01: cont = cont - 6'd1;
						2'b10: cont = valor;
						default: cont = cont;
					endcase	 
			end
			
end
